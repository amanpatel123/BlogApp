<!DOCTYPE html>
<html>

<head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
        <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'    %>
            <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
                <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark ">
        <%= link_to home_path,  class:"navbar-brand" do %>
            BlogApp
            <% end %>
                <div class="navbar-header">

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div id="navbarsExampleDefault" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item active">
                            <%= link_to "Home", home_path , class:"nav-link"  %>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <%= link_to "Create Post", new_post_path, class:"nav-link" %>
                        </li>
                    </ul>
                </div>

    </nav>
<div class="container-fluid">

    <%= yield %>
</div>
</body>

</html>